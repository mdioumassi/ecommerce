{% extends "::base.html.twig" %}
{% use 'CatalogueBundle:Default:sidebar_categorie.html.twig' %}


{% block body %}
    <div class="row">
        <div class="col-sm-6" style="margin-left: 15px;">
          <div class="w3-card-4">
            <img src="{{asset('images/uploads/'~fiche.imageName)}}" style="width:100%">
           </div>
        </div>
        <div class="col-sm-5">
            <h2 class="titleFiche">{{fiche.name}}</h2>
            <h2><strong>Prix:</strong>{{fiche.price}}&nbsp;&euro;</h2>
            <h2 class="titleFiche"><strong>Description</strong></h2>
            <p>{{fiche.description}}</p>
        </div>
        <div class="col-sm-10" style="border:1px solid red">
        </div>
    </div>
{% endblock %}

